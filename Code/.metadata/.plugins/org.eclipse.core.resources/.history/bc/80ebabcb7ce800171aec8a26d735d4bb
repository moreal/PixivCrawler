package me.moreal.network;

import java.util.Queue;

public class HttpRequest {
	private String method;
	private Queue<String> lines;
	
	public HttpRequest(String method, String url, String path) {
		this.lines.add(String.format("%s %s %s", method, url + path));
		this.lines.add(String.format("Host: %s", url));
	}
	
	public HttpRequest(String method, String url, String path, String getParam) {
		if(path.equals(""))
			path = "/";
		this.lines.add(String.format("%s %s %s", method, path, "HTTP/1.1"));
		this.lines.add(String.format("Host: %s", url));
	}
	
	public setUrl(String url, String get)
	
	public String toString() {
		String result = "";
		String s;
		
		while((s = lines.poll()) != null)
			result += s + "\r\n";
		
		return result; 
	}
	
	public String toString(String... args) {
		for(String s : args)
			lines.add(s + "\r\n");
		
		return toString();
	}
}
